    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "program": "~/NIR/noir/target/debug/nargo",
            "waitFor": true
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch",
            "program": "~/NIR/noir/target/debug/nargo",
            "args": ["compile"],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"]
        }
    ]

}